<% include ./parstial/header.ejs %>
<div class="w-full h-screen h-full text-white bg-zinc-700">
  <div class="w-full flex items-center text-white flex-col">
    <form id="uploadForm" hidden action="/fileupload" method="post" enctype="multipart/form-data">
      <!-- Use 'file' as the input type for file uploads -->
      <input type="file" name="image">
    </form>
    <div class="relative">
    <span id="uploadedIcon" class="h-6 w-6 mt-[7.5rem] mx-6 flex items-center justify-center absolute bg-zinc-700 cursor-pointer rounded-full">
        <i class="text-white ri-pencil-line"></i>
      </span>
    </div>
    <div class="w-[7rem] h-[7rem] bg-zinc-200 mt-10 overflow-hidden rounded-full">
      <img class="w-full h-full object-cover" src="/images/uploades/<%= user.profileImage %>" alt="image not respond">
    </div>
    <h4 class="mt-3 text-xl"><%=user.name%></h4>
    <h5 class="text-sm mt-1 ">@<%=user.username %></h5>
    <a href="" class="w-20 h-8 mt-2 py-1 text-center bg-zinc-500 text-black rounded-full">edit</a>
    <a href="/createpost" class="text-center bg-red-600 w-40 h-10 text-white rounded-full mt-3 py-1">Add New Post</a>
  </div>

  <div class="card w-full">
    <a href="/show/post">
    <div class="h-20 w-[150px] mt-4 ml-3 bg-zinc-100 rounded-lg overflow-hidden">
      <img src="/images/uploades/<%=user?.Posts[0]?.Image %>" class="h-full w-full object-fit" alt="">
    </div>
  </a>
    <p class="text-white text-lg mx-5 mt-2">Your uploaded posts</p>
    <p class="text-zinc-400 text-sm mx-10"><%=user.Posts.length%> Posts</p>
  </div>
</div>

<script>
  document.querySelector("#uploadedIcon").addEventListener("click", function() {
    document.querySelector("#uploadForm input").click();
  });

  document.querySelector("#uploadForm input").addEventListener("change", function() {
    document.querySelector("#uploadForm").submit();
  });
</script>

